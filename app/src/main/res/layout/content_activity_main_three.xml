<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kanyakubjbrahminsamiti.akhil.wordgames.ActivityMainThree">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@+id/select_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to WordGames!"
            />

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/select_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="5dp"
                android:id="@+id/solo"
                android:textColor="#FFFF"
                android:text= "       solo      "
                android:background="@drawable/backgroud_button_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="#FFFF"
                android:id="@+id/multi"
                android:background="@drawable/background_button_orange"
                android:text="          start  multi player game           "
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
