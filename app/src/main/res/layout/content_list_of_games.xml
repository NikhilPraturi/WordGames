<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kanyakubjbrahminsamiti.akhil.wordgames.ListOfGames"
    tools:showIn="@layout/activity_list_of_games">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Menu"

        android:textAlignment="center"
        android:textColor="#000070


"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="47dp"
        android:text="Select A Game"
        android:textAlignment="center"
        android:textColor="#000070

"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fllbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fllbtn"
        android:layout_width="360dp"
        android:layout_height="46dp"

        android:layout_marginTop="193dp"
        android:background="@drawable/background_button_orange"
        android:text="First Last Letter Game"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bwbtn"
        android:layout_width="358dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/backgroud_button_blue"
        android:text="Building Word Games"
        android:textColor="#ffff"
        app:layout_constraintStart_toStartOf="@+id/fllbtn"
        app:layout_constraintTop_toBottomOf="@+id/fllbtn" />

</android.support.constraint.ConstraintLayout>
